<div class="row p-4">
    {{#each notes}}
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h1>Hola {{user.name}}</h1>
                    <h4 class="card-title d-flex justify-content-between align-items-center">
                        {{{title}}} <a href="/notes/edit/{{{id}}}"><i class="fas fa-edit">edit</i></a>
                    </h4>
                    <p>
                        {{{description}}}
                        <form action="/notes/delete/{{id}}?_method=DELETE" method="POST">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit" class="btn btn-primary btn-danger btn-block btn-sm ">
                                Delete
                            </button>
                        </form>
                    </p>                    
                </div>
            </div>
        </div>
        {{else}}
        <div class="card mx-auto">
            <div class="card-body">
                <p class="lead">
                    No hay notas aun
                </p>
                <a href="/notes/add" class="btn btn-success">Crea una!</a>
            </div>
        </div>
    {{/each}}
</div>
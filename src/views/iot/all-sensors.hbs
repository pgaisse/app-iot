<div class="container">
    <div class="row mt-4">
        <div class="col-md-6 mx-auto">
            <div class="card">
                <div class="card-header">
                </div>
                <div class="card-body">
                    <form action="/iot/all-sensors" method="POST">
                       <!-- <div class="form-group">
                            <input type="text" name="server" class="form-control" placeholder="Server">
                        </div>-->
                         <div class="form-group">
                        <!--<input type="text" name="topic" class="form-control" placeholder="Topic">-->
                            <select class="browser-default custom-select form-control " name="topic">
                                <option selected="" disabled>Topic</option>
                                {{#each topicos}}
